<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/playlistFragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/playlistFragment"
        android:name="com.example.music_player.fragment.PlaylistFragment"
        android:label="fragment_playlist"
        tools:layout="@layout/fragment_playlist" >
        <action
            android:id="@+id/action_playlistFragment_to_songFragment"
            app:destination="@id/songFragment" />
    </fragment>
    <fragment
        android:id="@+id/songFragment"
        android:name="com.example.music_player.fragment.SongFragment"
        android:label="fragment_song"
        tools:layout="@layout/fragment_song" />
</navigation>